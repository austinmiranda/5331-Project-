
@{
    ViewBag.Title = "Request2";
}
<h3 style="text-align:center">3 steps to ask for a donatation</h3><br />
<div class="row">
    <h4>Step2: A brief description about what you need</h4>
    <div class="progress">
        <div class="progress-bar" role="progressbar" aria-valuenow="70"
             aria-valuemin="0" aria-valuemax="100" style="width:33%">
            33%
        </div>
    </div>
    <div class="col-xs-8">
        <form action="/Donation/Request3">
            <fieldset>
                <legend>What you need?</legend>
                <div class="form-group">
                    <label>Category:</label>
                    <select id="Select1" class="form-control">
                        <option>Grocery</option>
                        <option>Books</option>
                        <option>Furniture</option>
                        <option>Bedding</option>
                        <option>Hardware</option>
                    </select><br />
                </div>
                <div class="form-group">
                    <lable>Quantity:</lable><br />
                    <input type="text" class="form-control" id="quantity">
                </div>
                <div class="form-group">
                    <lable>Your Expectation:</lable><br />
                    <textarea id="TextArea1" rows="8" cols="600" class="form-control"></textarea><br />
                </div>
                <button type="submit" class="btn btn-default">Next</button>
            </fieldset>
        </form>
    </div>
</div>