@{
    ViewBag.Title = "Response";
}
<h2>@ViewBag.Title</h2>

<div class="row">
    <div class="col-md-6">
        <form action="/Donation/Completed">
            <div class="form-group">
                <label for="details">Please give details on how you pretend to proceed:</label>
                <textarea class="form-control" id="details"></textarea>
            </div>
            <div class="form-group">
                <label for="item1">Indicate which items you are fulfilling and the quantity fulfilled:</label>
                <table class="table">
                    <thead>
                        <tr>
                            <th></th>
                            <th>Item</th>
                            <th>Qty</th>
                            <th>Donating</th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr>
                            <td><input type="checkbox" value="" id="item1"></td>
                            <td>NELSON MATHEMATICS GRADE 8: STUDENT TEXT, by Marian Small, ISBN - 10: 0176269207, ISBN - 13: 9780176269203</td>
                            <td>20</td>
                            <td><input type="text" size="4" class="form-control" id="qtyfulfilled"></td>
                        </tr>
                    </tbody>
                </table>
            </div>
            <button type="submit" class="btn btn-success">Complete donation</button>
        </form>
    </div>
</div>