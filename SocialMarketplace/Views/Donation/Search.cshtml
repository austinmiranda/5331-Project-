@{
    ViewBag.Title = "Search";
}
<h2>@ViewBag.Title</h2>

<div class="row">
    <div class="col-md-12">
        <form action="/Donation/Result">
            <div class="row">
                <div class="form-group">
                    <label for="email">Full-text search:</label>
                    <input type="text" class="form-control" id="query">
                </div>
            </div>
            <div class="row">
                <div class="col-md-6">
                    <div class="form-group">
                        <label for="email">Categories:</label>

                        <div class="checkbox">
                            <label><input type="checkbox" value="">Grocery</label>
                        </div>
                        <div class="checkbox">
                            <label><input type="checkbox" value="">Books</label>
                        </div>
                        <div class="checkbox">
                            <label><input type="checkbox" value="" disabled>Furniture</label>
                        </div>
                        <div class="checkbox">
                            <label><input type="checkbox" value="" disabled>Bedding</label>
                        </div>
                        <div class="checkbox">
                            <label><input type="checkbox" value="" disabled>Hardware</label>
                        </div>
                    </div>
                </div>
                <div class="form-group">
                    <label for="email">Type:</label>

                    <div class="checkbox">
                        <label><input type="checkbox" value="">Goods</label>
                    </div>

                    <div class="checkbox">
                        <label><input type="checkbox" value="">Services</label>
                    </div>

                    <div class="checkbox">
                        <label><input type="checkbox" value="">Cash</label>
                    </div>

                </div>
            </div>
            <div class="row">
                <div class="form-group">
                    <label for="email">Keywords:</label>
                    <input type="text" class="form-control" id="keywords">
                </div>
            </div>
            <button type="submit" class="btn btn-default">Search</button>
        </form>
    </div>
</div>